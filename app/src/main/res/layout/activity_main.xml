<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_terms"
        style="@style/text_12_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="By signing up, you agree to our Terms &amp; Privacy Policy" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_terms">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_125sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/icon" />

            <EditText
                android:id="@+id/main_email"
                style="@style/edit_14"
                android:layout_marginTop="@dimen/_50sdp"
                android:hint="Email Id/Contact No."
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/main_password"
                style="@style/edit_14"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/main_login"
                style="@style/button_14"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Login" />

            <TextView
                android:id="@+id/main_signup"
                style="@style/text_12_black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="New User ? Create Account" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>