<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_terms"
        style="@style/text_12_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="By signing up, you agree to our Terms &amp; Privacy Policy" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_terms">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_125sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/icon" />

            <EditText
                android:id="@+id/main_first_name"
                style="@style/edit_14"
                android:layout_marginTop="@dimen/_50sdp"
                android:hint="First Name" />

            <EditText
                android:id="@+id/main_last_name"
                style="@style/edit_14"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/main_contact"
                style="@style/edit_14"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="10" />

            <Button
                android:id="@+id/main_signup"
                style="@style/button_14"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Sign up" />

            <TextView
                style="@style/text_12_black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Already have an account? Sign in" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>