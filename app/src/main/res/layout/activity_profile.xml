<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profile_first_name"
                style="@style/edit_14"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="First Name" />

            <EditText
                android:id="@+id/profile_last_name"
                style="@style/edit_14"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/profile_email"
                style="@style/edit_14"
                android:hint="Email Id"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/profile_contact"
                style="@style/edit_14"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="10" />

            <EditText
                android:id="@+id/profile_password"
                style="@style/edit_14"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="20" />

            <EditText
                android:visibility="gone"
                android:id="@+id/profile_confirm_password"
                style="@style/edit_14"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLength="20" />

            <RadioGroup
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/profile_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/profile_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/profile_transgender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transgender" />

            </RadioGroup>

            <Spinner
                android:id="@+id/profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp" />

            <Button
                android:id="@+id/profile_edit_button"
                style="@style/button_14"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Edit Profile" />

            <Button
                android:visibility="gone"
                android:id="@+id/profile_update_button"
                style="@style/button_14"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Update Profile" />

            <TextView
                android:id="@+id/profile_logout"
                style="@style/text_12_black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Logout" />

            <Button
                android:id="@+id/profile_delete_button"
                style="@style/button_14"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Delete Profile" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>